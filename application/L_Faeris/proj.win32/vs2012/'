#ifndef _FS_T_ENTITY_H_
#define _FS_T_ENTITY_H_

#include "FsMacros.h"

#include "stage/entity/FsEntity.h"
#include "stage/entity/FsEntity2D.h"
#include "FsGlobal.h"
#include "FsLuaEngine.h"

NS_FS_BEGIN


void TEntity2D_onUpdate(Entity* en,float dt);
void TEntity2D_onDraw(Entity* en, RenderDevice* r,bool updateMatrix);
bool TEntity2D_onTouchBegin(Entity2D* en,float x,float y);
bool TEntity2D_onTouchMove(Entity2D* en,float x,float y);
bool TEntity2D_onTouchEnd(Entity2D* en,float x,float y);
bool TEntity2D_onHit2D(Entity2D* en,float x,float y);



template <typename T_F>
class TEntity2D:public T_F 
{

	public:
		TEntity2D()
		{
			onUpdate=TEntity2D_onUpdate;
			onDraw=TEntity2D_onDraw;
			onTouchBegin=TEntity2D_onTouchBegin;
			onTouchMove=TEntity2D_onTouchMove;
			onTouchEnd=TEntity2D_onTouchEnd;
			onHit2D=TEntity2D_onHit2D;
		}
};

NS_FS_END


#endif /*_FS_T_ENTITY_H_*/

